{
  "workbench.colorTheme": "One Dark Pro",
  "git.confirmSync": false,
  "window.zoomLevel": 0,
  "prettier.singleQuote": true,
  "git.autofetch": true,
  "editor.tabSize": 2,
  "editor.renderIndentGuides": false,
  "eslint.autoFixOnSave": true,
  "eslint.alwaysShowStatus": false,
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "editor.dragAndDrop": false,
  "editor.minimap.enabled": false,
  "importCost.smallPackageColor": "rgba(124, 195, 110, 0.5)",
  "importCost.mediumPackageColor": "rgba(255, 98, 0, 0.5)",
  "importCost.largePackageColor": "rgba(224, 41, 22, 0.6)",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "explorer.confirmDragAndDrop": false,
  "editor.detectIndentation": false,
  "editor.formatOnSave": false, // needed in order to run linting and prettier without spacing conflicts from VSCode
  "editor.codeActionsOnSave": {
    "source.fixAll.tslint": true
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "tslint.alwaysShowRuleFailuresAsWarnings": true,
  "explorer.confirmDelete": false,
  "breadcrumbs.enabled": true,
  "cSpell.userWords": ["repo"]
}
